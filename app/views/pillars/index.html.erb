<p id="notice"><%= notice %></p>

<h1>Listing Pillars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pillars.each do |pillar| %>
      <tr>
        <td><%= pillar.name %></td>
        <td><%= link_to 'Show', pillar %></td>
        <td><%= link_to 'Edit', edit_pillar_path(pillar) %></td>
        <td><%= link_to 'Destroy', pillar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pillar', new_pillar_path %>
